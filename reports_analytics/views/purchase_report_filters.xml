<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="view_report_purchase_order_filters" model="ir.ui.view">
        <field name="name">purchasereport.order.pivot</field>
        <field name="model">purchasereport.order</field>
        <field name="arch" type="xml">
            <search string="test">
                <field name="date_order"/>
                <field name="product_id"/>
                <filter name="filter_date" date="date_order"/>
                <field name="partner_id"/>
                <field name="category_id"/>
                <group expand="1" string="Group By">
                    <filter string="الفئة" name="product_category" context="{'group_by':'category_id'}"/>
                    <filter string="المنتج" name="product" context="{'group_by':'product_id'}" />
                    <filter string="العميل" name="partner" context="{'group_by':'partner_id'}" />
                    <filter string="التاريخ" name="order_month" context="{'group_by':'date_order:month'}"/>
                </group>
            </search>
        </field>
    </record>
</odoo>