<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_report_purchase_order_custom" model="ir.ui.view">
            <field name="name">purchasereport.order.pivot</field>
            <field name="model">purchasereport.order</field>
            <field name="arch" type="xml">
               <pivot string="تقرير المشتريات" disable_linking="True" sample="1">
                   <field name="product_id" string="الصنف" type="row"/>
                   <field name="company_id" string="الشركة"  type="col"/>
                   <field name="untaxed_total" type="measure" string="السعر قبل الضريبة"/>
                   <field name="price_total" type="measure" string="السعر بعد الضريبة"/>
                   <field name="qty_billed" string="الكمية المفوتره" type="measure"/>
                   <field name="qty_received" string="الكمية المستلمة" type="measure"/>
                   <field name="qty_ordered" string="الكمية المطلوبة" type="measure"/>
                   <field name="order_id" string="عدد الفواتير" type="measure"/>
                   <field name="nbr_lines" string="اجمالي عدد المنتجات في الطلب " type="measure"/>
               </pivot>
            </field>
        </record>


    <record id="action_purchase_orders_lines" model="ir.actions.act_window">
            <field name="name"> Purchase Order Reports</field>
            <field name="res_model">purchasereport.order</field>
            <field name="view_mode">pivot</field>
            <field name="view_id" ref="view_report_purchase_order_custom" />
            <field name="search_view_id" ref="reports_analytics.view_report_purchase_order_filters"/>
            <field name="context">{'group_by_no_leaf':1,'group_by':[]}</field>
        </record>

    <menuitem id="purchase_order_line_menu" name="Purchase Orders Reports" action="action_purchase_orders_lines"
              parent="purchase.purchase_report" sequence="2"/>
    <menuitem id="purchase_order_report_all_menu" name="Purchase Analysis" action="purchase.action_purchase_order_report_all"
              parent="purchase.purchase_report" sequence="1"/>

</odoo>