<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record id="purchase_report_wizard" model="ir.ui.view">
        <field name="name">Purchase Order Report</field>
        <field name="model">purchase.supplier.report</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form string="Purchases Report By Supplier">
                <group>
                    <group>
                        <field name="start_date"/>
                    </group>
                    <group>
                        <field name="end_date"/>
                    </group>
                </group>
                <group>
                    <field name="vendor_ids" domain="[('supplier_rank','=',True)]" widget="many2many_tags"
                             />
                </group>
                <footer>
                    <button name="print_purchase_report_by_supplier" string="Print" type="object" class="oe_highlight"/>
                    <button string="Cancel" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_purchase_report_wizard" model="ir.actions.act_window">
        <field name="name">Purchase Report By Vendor</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">purchase.supplier.report</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="purchase_report_wizard"/>
        <field name="target">new</field>
    </record>

    <menuitem action="action_purchase_report_wizard"
              id="menu_purchase_report_wizard"
              name="Purchase Report By Vendor"
              sequence="2"
              parent="purchase.purchase_report"/>
    <menuitem action="purchase.action_purchase_order_report_all"
              id="menu_purchase_report_order_report_all"
              name="Reporting"
              sequence="1"
              parent="purchase.purchase_report"/>
</odoo>